# ============================================
# PlayNxt - Environment Configuration Example
# ============================================
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values for each environment.
# NEVER commit actual .env files to version control!

# ===================
# API Configuration
# ===================
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_API_TIMEOUT=30000

# ===================
# Environment
# ===================
EXPO_PUBLIC_ENV=development
EXPO_PUBLIC_APP_NAME=PlayNxt
EXPO_PUBLIC_APP_VERSION=1.0.0

# ===================
# Feature Flags
# ===================
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_MOCK_DATA=true

# ===================
# Third-Party Services
# ===================
# Google Maps (for venue locations)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=

# Payment Gateway (mocked for MVP)
EXPO_PUBLIC_PAYMENT_GATEWAY_KEY=

# Analytics
EXPO_PUBLIC_MIXPANEL_TOKEN=
EXPO_PUBLIC_AMPLITUDE_API_KEY=

# Error Tracking
EXPO_PUBLIC_SENTRY_DSN=

# ===================
# App Configuration
# ===================
EXPO_PUBLIC_DEFAULT_CURRENCY=INR
EXPO_PUBLIC_DEFAULT_LOCALE=en-IN
EXPO_PUBLIC_SUPPORT_EMAIL=support@playnxt.com

